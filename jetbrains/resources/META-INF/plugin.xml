<!-- Plugin Configuration File. Read more: https://plugins.jetbrains.com/docs/intellij/plugin-configuration-file.html -->
<idea-plugin>
    <!-- Unique identifier of the plugin. It should be FQN. It cannot be changed between the plugin versions. -->
    <id>awesome-themes</id>
    <version>1.0.0</version>

    <!-- Public plugin name should be written in Title Case.
         Guidelines: https://plugins.jetbrains.com/docs/marketplace/plugin-overview-page.html#plugin-name -->
    <name>Awesome-themes</name>
    <category>UI</category>

    <!-- A displayed Vendor name or Organization ID displayed on the Plugins Page. -->
    <vendor url="https://www.andreitech.com">Andrei</vendor>

    <idea-version since-build="251"/>

    <!-- Description of the plugin displayed on the Plugin Page and IDE Plugin Manager.
         Guidelines: https://plugins.jetbrains.com/docs/marketplace/plugin-overview-page.html#plugin-description -->
    <description><![CDATA[
    A collection of carefully curated and slightly modified themes for JetBrains IDEs, bringing popular community themes to your development environment.<br />
<br />
    - Awesome Andromeda     - A deep space-inspired theme with cosmic colors<br />
    - Awesome GitHub Dark   - GitHub's elegant dark theme for comfortable coding<br />
    - Awesome Night Owl     - A night owl's perfect companion with soothing dark blue tones<br />
    - Awesome One Dark      - The beloved Atom One Dark theme adapted<br />
    - Awesome Palenight     - A elegant dark theme with subtle purple accents<br />
    - Awesome Poimandres    - A modern theme with balanced contrast and vibrant highlights<br />
    - Awesome Rose Pine     - A classy minimalist theme inspired by natural pine and soho vibes<br />
<br />
    - Awesome Night Owl Light   - A night owl's companion also for the day<br />
    - Awesome Rose Pine Dawn    - A classy minimalist theme inspired by natural pine and soho vibes<br />
<br />
    Each theme is optimized for long coding sessions and designed to reduce eye strain while maintaining excellent code readability. Perfect for developers who appreciate aesthetic coding environments.
  ]]></description>

    <!-- Short summary of new features and bugfixes in the latest plugin version.
         Displayed on the Plugin Page and IDE Plugin Manager. Simple HTML elements can be included between <![CDATA[  ]]> tags. -->
    <change-notes><![CDATA[

  ]]></change-notes>

    <!-- Product and plugin compatibility requirements.
         Read more: https://plugins.jetbrains.com/docs/intellij/plugin-compatibility.html -->
    <depends>com.intellij.modules.platform</depends>

    <extensions defaultExtensionNs="com.intellij">
        <themeProvider id="awesome-andromeda" path="/theme/andromeda/Awesome_Andromeda.theme.json"/>
        <themeProvider id="awesome-github-dark" path="/theme/github-dark/Awesome_Github_Dark.theme.json"/>
        <themeProvider id="awesome-night-owl" path="/theme/night-owl/Awesome_Night_Owl.theme.json"/>
        <themeProvider id="awesome-one-dark" path="/theme/one-dark/Awesome_One_Dark.theme.json"/>
        <themeProvider id="awesome-palenight" path="/theme/palenight/Awesome_Palenight.theme.json"/>
        <themeProvider id="awesome-poimandres" path="/theme/poimandres/Awesome_Poimandres.theme.json"/>
        <themeProvider id="awesome-rose-pine" path="/theme/rose-pine/Awesome_Rose_Pine.theme.json"/>
        <themeProvider id="awesome-night-owl-light" path="/theme/night-owl-light/Awesome_Night_Owl_Light.theme.json"/>
        <themeProvider id="awesome-rose-pine-dawn" path="/theme/rose-pine-dawn/Awesome_Rose_Pine_Dawn.theme.json"/>
    </extensions>
</idea-plugin>